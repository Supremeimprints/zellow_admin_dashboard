{
    "info": {
        "name": "Zellow Admin API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost/zellow_admin/api",
            "type": "string"
        },
        {
            "key": "token",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Index",
            "request": {
                "method": "GET",
                "url": "{{base_url}}/",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ]
            }
        },
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/auth/login",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"gitau.magana@zellow.com\",\n    \"password\": \"12345678\"\n}"
                        }
                    }
                }
            ]
        },
        {
            "name": "Services",
            "item": [
                {
                    "name": "Request Service",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/services/request",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"service_id\": 1,\n    \"description\": \"Test service request\"\n}"
                        }
                    }
                }
            ]
        },
        {
            "name": "Feedback",
            "item": [
                {
                    "name": "Submit Feedback",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/feedback",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"type\": \"general\",\n    \"content\": \"Test feedback\",\n    \"rating\": 5\n}"
                        }
                    }
                }
            ]
        },
        {
            "name": "Orders",
            "item": [
                {
                    "name": "List Orders",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/orders",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ]
                    }
                },
                {
                    "name": "Get Order",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/orders/:id",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ]
                    }
                },
                {
                    "name": "Create Order",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/orders",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"customer_id\": 1,\n    \"items\": [\n        {\n            \"product_id\": 1,\n            \"quantity\": 2,\n            \"unit_price\": 1000\n        }\n    ],\n    \"shipping_address\": \"123 Test St\",\n    \"shipping_method\": \"Standard\",\n    \"payment_method\": \"Mpesa\",\n    \"total_amount\": 2000\n}"
                        }
                    }
                },
                {
                    "name": "Update Order Status",
                    "request": {
                        "method": "PUT",
                        "url": "{{base_url}}/orders/:id",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"status\": \"Processing\",\n    \"payment_status\": \"Paid\"\n}"
                        }
                    }
                }
            ]
        }
    ]
}
